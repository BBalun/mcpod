generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Catalog {
  id Int @id @default(autoincrement())

  star Identifier @relation(fields: [starId], references: [starId])

  starId      Int
  referenceId String
  filter      String
  julianDate  Decimal

  magnitude Decimal?
  magErr    Decimal?

  @@index([starId])
  @@index([referenceId])
}

model Observation {
  id Int @id @default(autoincrement())

  star Identifier @relation(fields: [starId], references: [starId])

  starId      Int
  referenceId String
  filter      String

  count Int @default(0)

  lambdaEff    Decimal?
  magAverage   Decimal?
  magError     Decimal?
  stdError     Decimal?
  amplitudeEff Decimal?

  // @@unique([starId, filter, referenceId])
  @@index([starId, referenceId])
}

model Reference {
  id          Int    @id @default(autoincrement())
  referenceId String
  starId      Int

  star Identifier @relation(fields: [starId], references: [starId])

  author           String?
  bibcode          String?
  referenceStarIds String?

  // @@unique([referenceId, starId])
}

model Identifier {
  starId Int @id

  mainId    String
  isFetched Boolean @default(false)

  tyc String?
  hip String?

  epoch  Decimal?
  period Decimal?

  Catalog     Catalog[]
  Observation Observation[]
  Reference   Reference[]
}
